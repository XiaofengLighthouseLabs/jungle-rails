

<% product = line_item.product%>
<% line_item_price = line_item.item_price_cents / 100.0 %>
<% line_item_amount = line_item.total_price_cents / 100.0 %>
<% @total_cost +=  line_item.total_price_cents %>

<tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <p><%= line_item_price %></p>
    </td>
    <td>
      <p><%= line_item.quantity %></p>
    </td>
    <td>
      <p><%= line_item_amount %></p>
    </td>
</tr>
